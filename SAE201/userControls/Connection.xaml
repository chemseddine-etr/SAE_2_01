<UserControl
    x:Class="SAE201.userControls.Connection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201.userControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="413"
    d:DesignWidth="630"
    Background="White"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="0,0,0,167">
            <TextBox
                Width="134"
                HorizontalAlignment="Center"
                FontSize="25"
                Text="Connection" />
            <Label
                Width="300"
                Margin="40,20"
                Content="login :" />
            <TextBox x:Name="loginTextbox" Width="300" />
            <Label
                Width="300"
                Margin="40,20"
                Content="Mots de passe :" />
            <PasswordBox x:Name="mdpTextBox" Width="300" />
        </StackPanel>


        <Button
            x:Name="Connecter"
            Width="150"
            Height="40"
            Margin="0,298,0,75"
            HorizontalAlignment="Center"
            Click="Se_Connecter_Click"
            Content="Se connecter" />
    </Grid>
</UserControl>
