<UserControl x:Class="SAE201.userControls.Creerclient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE201.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="413" d:DesignWidth="630" Background="White">
    
        <Grid  Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titre -->
            <TextBlock Text="Créer un client"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   Grid.Row="0"/>

            <!-- Formulaire -->
            <Grid Grid.Row="1" Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Nom :" Margin="0,0,0,10"/>
                    <TextBlock Text="Prénom :" Margin="0,10,0,10"/>
                    <TextBlock Text="Téléphone :" Margin="0,10,0,10"/>
                    <TextBlock Text="Rue :" Margin="0,10,0,10"/>
                    <TextBlock Text="Code Postal :" Margin="0,10,0,10"/>
                    <TextBlock Text="Ville :" Margin="0,10,0,10"/>

            </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBox x:Name="txtNom" Width="250"/>
                    <TextBox x:Name="txtPrenom" Width="250" Margin="0,17,0,0"/>
                    <TextBox x:Name="txtTelephone" Width="250" Margin="0,17,0,0"/>
                    <TextBox x:Name="txtRue" Width="250" Margin="0,17,0,0"/>
                    <TextBox x:Name="txtCP" Width="250" Margin="0,17,0,0"/>
                    <TextBox x:Name="txtVille" Width="250" Margin="0,17,0,0"/>
            </StackPanel>
            </Grid>

            <!-- Bouton -->
            <Button x:Name="Creer" Content="Créer"
                Width="150"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,20"
                Grid.Row="2"
                Click="BoutonCreerClient_Click"/>
        </Grid>
    </UserControl>

